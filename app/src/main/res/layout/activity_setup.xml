<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SetupActivity">

    <TextView
        android:id="@+id/encabezado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FF3C00"
        android:fontFamily="@font/syncopate_bold"
        android:padding="15dp"
        android:text="Complete sus Datos"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textStyle="bold|italic" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/setup_imagen"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_below="@+id/encabezado"
        android:background="@drawable/bordercarrito"
        android:src="@drawable/fenix"
        android:padding="18dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        app:civ_border_color="@color/white"
        app:civ_border_width="2dp" />

    <EditText
        android:id="@+id/setup_nombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/setup_imagen"
        android:background="@drawable/borderedondo"
        android:hint="Ingrese su Nombre"
        android:inputType="text"
        android:layout_margin="20dp"
        android:padding="10dp" />

    <EditText
        android:id="@+id/setup_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/setup_nombre"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/borderedondo"
        android:hint="Ingrese su Correo"
        android:inputType="text"
        android:padding="10dp" />

    <EditText
        android:id="@+id/setup_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/setup_email"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/borderedondo"
        android:hint="Ingrese su Correo"
        android:inputType="text"
        android:padding="10dp" />

    <EditText
        android:id="@+id/setup_telephone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/setup_password"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/borderedondo"
        android:hint="Ingrese su TelÃ©fono"
        android:inputType="text"
        android:padding="10dp" />

    <Button
        android:id="@+id/setup_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/setup_telephone"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/borderedondo"
        android:backgroundTint="@color/amarillo"
        android:fontFamily="@font/syncopate_bold"
        android:text="CONTINUAR"
        android:textSize="15dp"
        android:inputType="text"
        android:padding="10dp" />



</RelativeLayout>